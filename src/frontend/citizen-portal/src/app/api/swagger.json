            "nullable": true
          },
          "address_line2": {
            "type": "string",
            "description": "The mailing address of the disputant.",
            "nullable": true
          },
          "address_line3": {
            "type": "string",
            "description": "The mailing address of the disputant.",
            "nullable": true
          },
          "address_city": {
            "type": "string",
            "description": "The mailing address city of the disputant.",
            "nullable": true
          },
          "address_province": {
            "type": "string",
