{
  "openapi": "3.0.1",
  "info": {
    "title": "ticket_search",
    "description": "A ticket search web api for searching detail information for a traffic violation ticket",
    "version": "v1"
  },
  "paths": {
    "/api/Tickets": {
      "get": {
        "tags": [
          "Tickets"
        ],
        "parameters": [
          {
            "name": "ticketNumber",
            "in": "query",
            "description": "The traffic violation ticket number",
            "required": true,
            "schema": {
              "pattern": "^[A-Z]{2}[0-9]{6,}$",
              "type": "string",
              "description": "The traffic violation ticket number"
            }
          },
          {
            "name": "time",
            "in": "query",
            "description": "The time of traffic violation",
            "required": true,
            "schema": {
              "pattern": "^(2[0-3]|[01]?[0-9]):([0-5]?[0-9])$",
              "type": "string",
              "description": "The time of traffic violation"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketSearchResponse"
                }
              }
            }
          },
          "204": {
            "description": "Success"
          },
          "500": {
            "description": "Server Error"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Offence": {
        "type": "object",
        "properties": {
          "offenceNumber": {
            "type": "integer",
            "description": "The offence number, should be 1, 2 or 3",
            "format": "int32"
          },
          "ticketedAmount": {
            "type": "number",
            "description": "The total ticketed amount",
            "format": "double"
          },
          "amountDue": {
            "type": "number",
            "description": "The total discounted amount due.",
            "format": "double"
          },
          "violationDateTime": {
            "type": "string",
            "description": "The offence happened time in format of yyyy-mm-ddThh:mm.",
            "nullable": true
          },
          "offenceDescription": {
            "type": "string",
            "description": "The offence description.",
            "nullable": true
          },
          "vehicleDescription": {
            "type": "string",
            "description": "The vehicle description.",
            "nullable": true
          },
          "discountAmount": {
            "type": "number",
            "description": "The disount amount.",
            "format": "double"
          },
          "discountDueDate": {
            "type": "string",
            "description": "The discount amount due date",
            "nullable": true
          },
          "invoiceType": {
            "type": "string",
            "description": "The invoice type.",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TicketSearchResponse": {
        "type": "object",
        "properties": {
          "violationTicketNumber": {
            "type": "string",
            "description": "The traffic violation ticket number of the searching result",
            "nullable": true
          },
          "violationTime": {
            "type": "string",
            "description": "The traffic violation time of the searching result in format of hh:mm",
            "nullable": true
          },
          "violationDate": {
            "type": "string",
            "description": "The traffic violation date of the searching result in format of yyyy-mm-dd",
            "nullable": true
          },
          "offences": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Offence"
            },
            "description": "The list of all offences of the searching ticket",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      }
    }
  }
}
